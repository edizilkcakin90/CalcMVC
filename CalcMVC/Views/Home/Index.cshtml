@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Hesap Makinesi Giris Sayfasi</title>
    <link href="~/Content/Style/LoginStyle.css" rel="stylesheet" />
</head>
<body style="background-color:black;">
    <form action="/Home/Index" method="post">
        <div class="login-box">
            <h1>Giris</h1>
            <div class="textbox">
                <i class="fas fa-user"></i>
                <input type="text" placeholder="Kullanici Adi" name="UserName">
            </div>
            <div class="textbox">
                <i class="fas fa-lock"></i>
                <input type="password" placeholder="Sifre" name="Password">
            </div>
            <input type="submit" class="btn" value="Giris Yap">            
        </div>        
    </form>
</body>
</html>